{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "DOM"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "jsx": "react-jsx",
        "noEmit": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ]
}